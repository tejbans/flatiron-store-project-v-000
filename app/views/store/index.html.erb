<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
    <% if item.inventory > 0 %>
      <p><%= item.title %> | <%= number_to_currency(item.price/100) %> 
        <% if user_signed_in? %>
          <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
        <% end %> 
    <% end %>
<% end %>